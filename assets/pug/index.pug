	section.contacts 
		.section_in 
			.contacts_main 
				.contacts_map 
					#map 
				.contacts_info 
					h6 Нашии Контакты
					ul.contacts_info_list
						-
							var contacts = [
								{
									link: '+7 (000) 000 00 00',
									icon: 'mobile'
								},
								{
									link: 'mail@mail.ru',
									icon: 'envelope'
								},
								{
									txt: 'г. Железноводск, ул. Московская 17',
									icon: 'marker'
								},
							]
						each item in contacts 
							li.contacts_info_item
								if item.link
									a(href="#")
										.contacts_info_icon 
											+icon(item.icon)
										p=item.link
								else 
									span
										.contacts_info_icon 
											+icon(item.icon)
										p=item.txt
					ul.contacts_social_list 
						each item in ['tg', 'wp']
							li 
								a(href="#")
									+icon(item) 
							
